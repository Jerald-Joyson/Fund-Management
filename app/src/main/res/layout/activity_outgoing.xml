<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcf7f4"
    android:orientation="vertical"
    tools:context=".OutgoingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="3mm"
        android:layout_marginTop="5mm"
        android:layout_marginRight="3mm"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        android:padding="3mm">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Outgoing Money"
            android:textColor="#D01C1F"
            android:textSize="34sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="3mm"
        android:layout_marginTop="7mm"
        android:layout_marginRight="3mm"
        android:background="@drawable/rounded_corner_g"
        android:orientation="vertical"
        android:padding="3mm">

        <TextView
            android:id="@+id/mnthViewOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3mm"
            android:layout_marginTop="1mm"
            android:layout_marginRight="3mm"
            android:hint="Month"
            android:padding="1mm"
            android:textColor="#000000"
            android:background="@drawable/rounded_corner"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/dateView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3mm"
            android:background="@null"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:hint="Enter the Date:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/outAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3mm"
            android:background="@null"
            android:gravity="center"
            android:hint="Amount Taken:"
            android:inputType="number"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/outName"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="text|textMultiLine"
            android:layout_gravity="center"
            android:layout_margin="3mm"
            android:background="@null"
            android:gravity="center"
            android:hint="Amount Taken For: "
            android:textSize="20sp" />
    </LinearLayout>


    <Button
        android:id="@+id/btnOutSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3mm"
        android:layout_marginTop="7mm"
        android:layout_marginRight="3mm"
        android:backgroundTint="#4c878b"
        android:fontFamily="sans-serif"
        android:text="SAVE"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5mm"
        android:orientation="horizontal"
        android:background="@drawable/rounded_corner">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Total Amount Taken:"
            android:textColor="#D01C1F"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resOutAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3mm"
            android:text="100"
            android:textColor="#D01C1F"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>