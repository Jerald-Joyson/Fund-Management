<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner"
    android:orientation="vertical"
    tools:context=".IncomingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="3mm"
        android:layout_marginTop="5mm"
        android:layout_marginRight="3mm"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        android:padding="3mm">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Incoming Money"
            android:textColor="#D01C1F"
            android:textSize="34sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="3mm"
        android:layout_marginTop="7mm"
        android:layout_marginRight="3mm"
        android:background="@drawable/rounded_corner_g"
        android:orientation="vertical"
        android:padding="3mm">

        <TextView
            android:id="@+id/mnthViewInc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3mm"
            android:layout_marginTop="1mm"
            android:layout_marginRight="3mm"
            android:hint="Month"
            android:padding="1mm"
            android:textColor="#000000"
            android:background="@drawable/rounded_corner"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/dateView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3mm"
            android:background="@null"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:hint="Enter the Date:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/incName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3mm"
            android:background="@null"
            android:gravity="center"
            android:hint="Enter the Name:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/incAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3mm"
            android:background="@null"
            android:gravity="center"
            android:hint="Enter the Amount:"
            android:inputType="number"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnIncSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3mm"
        android:layout_marginTop="7mm"
        android:layout_marginRight="3mm"
        android:backgroundTint="#4c878b"
        android:fontFamily="sans-serif"
        android:text="SAVE"
        android:textSize="20sp" />

</LinearLayout>